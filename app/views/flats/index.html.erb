<div class="row">
<h1>Listing flats</h1>
<div class="large-3 columns ">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Rentaldate</th>
      <th>Occupied</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.Name %></td>
        <td><%= flat.Address %></td>
        <td><%= flat.RentalDate %></td>
        <td><%= flat.Occupied %></td>
        <td><%= link_to 'Show', flat %></td>
        <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
        <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
